<div class="flex flex-col gap-[1rem]">
    <% @authors.each do |author| %>
        <div class = "border border-solid border-[0.1rem] rounded-[1rem] p-[1.5rem] flex flex-col gap-[0.5rem]">
            <p><%= author.id %></p>
            <h1 class="text-xl font-mono font-bold"><%= author.name %></h1>
            <div class="flex flex-row gap-[0.5rem]">
                <%= button_to 'Show', author_path(author.id), :class => "border border-solid border-[0.1rem] rounded-[1rem] px-[0.5rem] py-[0.25rem] bg-black text-white", :method => "get" %>
                <%= button_to 'Edit', edit_author_path(author.id), :class => "border border-solid border-[0.1rem] rounded-[1rem] px-[0.5rem] py-[0.25rem] bg-black text-white", :method => "get"%>
                <%= button_to 'Delete', destroy_author_path(author.id), :class => "border border-solid border-[0.1rem] rounded-[1rem] px-[0.5rem] py-[0.25rem]", :method => "delete" %>
            </div>
        </div>
    <% end %>
    <%= button_to 'New Author', new_author_path, :class => "border border-solid border-[0.1rem] rounded-[1rem] px-[0.5rem] py-[0.25rem] bg-black text-white", :method => "get" %>
    <%= button_to 'See All Articles', articles_path, :class => "border border-solid border-[0.1rem] rounded-[1rem] px-[0.5rem] py-[0.25rem]", :method => "get" %>
</div>